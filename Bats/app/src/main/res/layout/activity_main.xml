<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="match_parent"
        android:layout_height="273dp"
        android:src="@drawable/logo_sample"></ImageView>

    <EditText
        android:id="@+id/edit_id"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="아이디"></EditText>
    <EditText
        android:id="@+id/edit_pw"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="비밀번호"></EditText>

    <CheckBox
        android:id="@+id/cbox_autologin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="자동로그인"></CheckBox>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@color/bg"
        android:textColor="@color/white"
        android:text="로그인"></Button>
    <Button
        android:id="@+id/btn_signup"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@color/bg"
        android:text="회원가입"></Button>

    <Button
        android:id="@+id/btn_find"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@color/bg"
        android:text="아이디/ 비밀번호 찾기"
        android:textColor="#000000"></Button>

</LinearLayout>